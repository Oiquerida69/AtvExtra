
using System;

namespace JogoDaForca
{
    class Program
    {
        static void Main(string[] args)
        {
            string palavraSecreta = "PROGRAMACAO";
            int maxTentativas = 6;
            int tentativas = 0;
            string letrasErradas = "";

            char[] letrasDescobertas = new char[palavraSecreta.Length];
            for (int i = 0; i < letrasDescobertas.Length; i++)
            {
                letrasDescobertas[i] = '_';
            }

            while (true)
            {
                Console.Clear();
                Console.WriteLine("Jogo da Forca");
                Console.WriteLine("==============");
                Console.WriteLine();

                Console.WriteLine("Palavra: " + new string(letrasDescobertas));
                Console.WriteLine();
                Console.WriteLine("Letras erradas: " + letrasErradas);
                Console.WriteLine("Tentativas restantes: " + (maxTentativas - tentativas));

                if (tentativas >= maxTentativas)
                {
                    Console.WriteLine();
                    Console.WriteLine("Você perdeu! A palavra secreta era: " + palavraSecreta);
                    break;
                }

                if (new string(letrasDescobertas) == palavraSecreta)
                {
                    Console.WriteLine();
                    Console.WriteLine("Parabéns! Você acertou a palavra secreta.");
                    break;
                }

                Console.WriteLine();
                Console.Write("Digite uma letra: ");
                char letra = Console.ReadLine().ToUpper()[0];

                if (!Char.IsLetter(letra))
                {
                    Console.WriteLine("Por favor, digite apenas uma letra.");
                    Console.ReadKey();
                    continue;
                }

                if (letrasErradas.Contains(letra.ToString()))
                {
                    Console.WriteLine("Você já tentou essa letra.");
                    Console.ReadKey();
                    continue;
                }

                bool letraEncontrada = false;

                for (int i = 0; i < palavraSecreta.Length; i++)
                {
                    if (palavraSecreta[i] == letra)
                    {
                        letrasDescobertas[i] = letra;
                        letraEncontrada = true;
                    }
                }

                if (!letraEncontrada)
                {
                    tentativas++;
                    letrasErradas += letra + " ";
                }

                Console.ReadKey();
            }
        }
    }
}

